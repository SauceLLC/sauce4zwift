{
  "name": "sauce4zwift",
  "productName": "Sauce for Zwiftâ„¢",
  "private": true,
  "version": "1.1.6-beta",
  "description": "Overlay widgets and advanced instrumentation for the serious Zwifter.",
  "homepage": "https://www.sauce.llc",
  "author": "Sauce, LLC",
  "license": "UNLICENSED",
  "main": "src/loader.js",
  "scripts": {
    "start": "electron .",
    "start-debug-brk": "electron --inspect-brk .",
    "start-debug": "electron --inspect .",
    "unpacked": "electron-builder --dir",
    "build": "electron-builder build -p never",
    "publish": "electron-builder build -p always",
    "postinstall": "electron-builder install-app-deps",
    "test": "node --test test",
    "test-debug": "node --inspect-brk --test test"
  },
  "dependencies": {
    "@sentry/node": "6.19.6",
    "better-sqlite3": "9.1.1",
    "electron-updater": "6.1.4",
    "express": "4.18.2",
    "express-ws": "5.0.2",
    "jsfit": "github:saucellc/jsfit.git#617a6e1087",
    "keytar": "7.9.0",
    "lossless-json": "4.0.1",
    "node-fetch": "3.3.2",
    "protobufjs": "7.2.5",
    "xxhash-addon": "2.0.1"
  },
  "optionalDependencies": {
    "zwift-utils": "https://github.com/SauceLLC/zwift-utils.git#9aeefd773831a199a25eaa63637ab480783c9cf3"
  },
  "devDependencies": {
    "@electron/notarize": "2.1.0",
    "@sentry/browser": "6.19.6",
    "echarts": "5.4.3",
    "electron": "24.8.8",
    "electron-builder": "24.6.0",
    "eslint": "8.53.0",
    "sass": "1.69.5",
    "world_countries_lists": "2.8.2"
  },
  "build": {
    "appId": "io.saucellc.sauce4zwift",
    "artifactName": "sauce4zwift-${version}.${ext}",
    "buildDependenciesFromSource": true,
    "generateUpdatesFilesForAllChannels": true,
    "protocols": [
      {
        "name": "Sauce for Zwift",
        "schemes": [
          "sauce4zwift"
        ]
      }
    ],
    "files": [
      "!.*",
      "!test",
      "!tools",
      "!assets",
      "!pages/scss",
      "!**/Makefile",
      "!**/README.md",
      "!**/CONTRIBUTING.md",
      "!**/HISTORY.md",
      "!**/.github",
      "!**/.eslint*",
      "!**/.jest*",
      "!**/*.js.map",
      "!**/*.ts.map",
      "!**/*.mjs.map",
      "!**/*.css.map",
      "!**/*.ts.map",
      "!**/*.test.js",
      "!**/*.ts",
      "!**/*.vcxproj",
      "!**/*.vcxproj.*",
      "!**/.history",
      "!**/*.o.d",
      "!**/*.a.d",
      "!**/*.node.d",
      "!**/*.iobj",
      "!**/*.ipdb",
      "!**/*.ilk",
      "!**/*.exp",
      "!**/*.lib",
      "!**/build/node_gyp_bins",
      "!**/{Release,Debug}/obj",
      "!**/{Release,Debug}/.forge-meta",
      "!node_modules/keytar/{bin,node_modules}",
      "!node_modules/better-sqlite3/{bin,deps,src}",
      "!node_modules/better-sqlite3/build/{Release,Debug}/{*.a,*.lib,test_extension.*}",
      "!node_modules/better-sqlite3/build/deps",
      "!node_modules/protobufjs/{scripts,dist}",
      "!node_modules/xxhash-addon/{bin,src,xxHash}",
      "!node_modules/nan",
      "!node_modules/web-streams-polyfill",
      "!node_modules/@sentry/**/{build,esm}",
      "!node_modules/zwift-utils",
      "!node_modules/typed-emitter",
      "!node_modules/rxjs",
      "!node_modules/lossless-json/{dist,lib/types,lib/umd}"
    ],
    "asar": false,
    "publish": [
      {
        "provider": "github",
        "owner": "SauceLLC",
        "repo": "sauce4zwift-releases"
      }
    ],
    "win": {
      "certificateSubjectName": "Sauce, LLC"
    },
    "mac": {
      "target": {
        "target": "zip",
        "arch": [
          "universal"
        ]
      },
      "notarize": false,
      "category": "public.app-category.healthcare-fitness",
      "identity": "Sauce, LLC (7P47F44SKP)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "afterSign": "build/scripts/notarize.js"
  }
}
